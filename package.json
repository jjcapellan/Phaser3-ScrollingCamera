{
  "name": "phaser3-scrolling-camera",
  "version": "2.0.2",
  "description": "Class for Phaser 3 framework, adding the capacity of scrolling by dragging or using the mouse wheel",
  
  "main": "dist/scrollcam.js",
  "umd:main": "dist/scrollcam.umd.js",
  "module": "dist/scrollcam.esm.js",
  "source": "src/scrollcam.ts",  
  "types": "dist/scrollcam.d.ts",

  "scripts": {
    "build:dev": "microbundle -f umd --name ScrollingCamera",
    "build:dist": "microbundle -f cjs,umd,es --name ScrollingCamera --sourcemap false",
    "dev": "microbundle watch -f umd --name ScrollingCamera"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jjcapellan/Phaser3-ScrollingCamera.git"
  },
  "keywords": [
    "phaser3",
    "phaser",
    "camera",
    "scroll",
    "drag",
    "mouse",
    "wheel",
    "menu"
  ],
  "author": "Juan Jose Capellan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jjcapellan/Phaser3-ScrollingCamera/issues"
  },
  "homepage": "https://github.com/jjcapellan/Phaser3-ScrollingCamera#readme",
  "devDependencies": {
    "microbundle": "^0.12.4",
    "phaser": "^3.24.1"
  }
}
